Config { font = "xft:Envy Code R:pixelsize=13"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , commands = [ Run MultiCpu ["-t","<fc=#1992fc>CPU</fc> <total>%"] 10
                    , Run Network "wlan0" ["-t","<rx>↓<tx>↑"] 30
		    , Run Wireless "wlan0" ["-t","<essid> <quality>%"] 30
                    , Run Memory ["-t","<fc=#1992fc>MEM</fc> <usedratio>%"] 30
                    --, Run Swap ["-t", "<usedratio>%" ] 10
                    , Run Date "<fc=#1992cf>DATE</fc> %a %d/%m/%y %R" "date" 10
                    , Run BatteryP ["BAT0"]
                                   ["-t", "<fc=#1992cf><acstatus></fc> <watts> <timeleft><fc=yellow><left></fc>%",
                                    "-L", "10", "-H", "80", "-p", "3", "-n", "grey90",
                                    "--", "-O", "AC", "-o", "BAT",
                                    "-L", "-15", "-H", "-5",
                                    "-f", "AC/online",
                                    "-l", "red", "-m", "lightblue", "-h", "green"] 50
                    --, Run CoreTemp ["-t","<core2>","-L", "40", "-H", "65","-l", "lightblue", "-n", "gray90", "-h", "red"] 50
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %multicpu% · %memory% · <fc=#1992cf>NET</fc> %wlan0wi% - %wlan0% · %date% · %battery%"
       }
